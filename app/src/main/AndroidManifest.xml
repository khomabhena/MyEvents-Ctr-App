<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.myevents.hq">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".WelcomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeAd"
            android:label="@string/title_activity_make_ad"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".MakeEvent"
            android:label="@string/title_activity_make_event"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".RegPage"
            android:label="@string/title_activity_reg_page"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".UserConfirmation"
            android:label="@string/title_activity_user_confirmation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".UserSignUp"
            android:label="@string/title_activity_user_sign_up"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".PreviewEvent"
            android:label="@string/title_activity_preview_event"
            android:parentActivityName=".MakeEvent"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MakeEvent" />
        </activity>
        <activity
            android:name=".PosterPreview"
            android:label="@string/title_activity_poster_preview"
            android:parentActivityName=".PreviewEvent"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.PreviewEvent" />
        </activity>
        <activity
            android:name=".PreviewVideoView"
            android:label="@string/title_activity_preview_video_view"
            android:parentActivityName=".PreviewContentView"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.PreviewContentView" />
        </activity>
        <activity
            android:name=".BitmapView"
            android:label="@string/title_activity_bitmap_view"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".EventContent"
            android:label="@string/title_activity_event_content"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".PreviewAd"
            android:label="@string/title_activity_preview_ad"
            android:parentActivityName=".MakeAd"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MakeAd" />
        </activity>
        <activity
            android:name=".PreviewLogo"
            android:label="@string/title_activity_preview_logo"
            android:parentActivityName=".PreviewAd"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.PreviewAd" />
        </activity>
        <activity
            android:name=".PreviewAdView"
            android:label="@string/title_activity_preview_ad_view"
            android:parentActivityName=".PreviewAd"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.PreviewAd" />
        </activity>
        <activity
            android:name=".LogoView"
            android:label="@string/title_activity_logo_view"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".AdContent"
            android:label="@string/title_activity_ad_content"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".PreviewContentView"
            android:label="@string/title_activity_preview_content_view"
            android:parentActivityName=".PreviewEvent"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.PreviewEvent" />
        </activity>

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".WaitingEventsService"
            android:exported="false" />
        <service
            android:name=".WaitingAdsService"
            android:exported="false" />

        <receiver
            android:name=".WaitingAdsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="tech.myevents.hq" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".WaitingEventsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="tech.myevents.hq" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".SmsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="tech.myevents.hq" />
            </intent-filter>
        </receiver>

        <service
            android:name=".SmsService"
            android:exported="false" />

        <receiver
            android:name=".EventsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="tech.myevents.hq" />
            </intent-filter>
        </receiver>

        <service
            android:name=".EventsService"
            android:exported="false" />

        <receiver
            android:name=".AdsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="tech.myevents.hq" />
            </intent-filter>
        </receiver>

        <service
            android:name=".AdsService"
            android:exported="false" />

        <activity
            android:name=".Stats"
            android:label="@string/title_activity_stats"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".Updates"
            android:label="@string/title_activity_updates"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.MainActivity" />
        </activity>
        <activity
            android:name=".UpdatesView"
            android:label="@string/title_activity_updates_view"
            android:parentActivityName=".Updates"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.Updates" />
        </activity>
        <activity
            android:name=".UpdatesContent"
            android:label="@string/title_activity_updates_content"
            android:parentActivityName=".UpdatesView"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.myevents.hq.UpdatesView" />
        </activity>
    </application>

</manifest>