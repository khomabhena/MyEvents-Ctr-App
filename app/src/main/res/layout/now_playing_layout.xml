<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/background_shadow"
                android:layout_width="163dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivBitmap"
                    android:layout_margin="1px"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/background_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContent"
                android:background="@drawable/background_shadow"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/background_main"
                    android:layout_margin="1px"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvName"
                        android:text="Your Ad Title Here"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="17dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvVenue"
                            android:text="Event Venue"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:text="Event City &amp; Location"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="22dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:text="$6.00 - $15.00"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="#008080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="bottom|center_vertical"
                        android:gravity="bottom|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llLikesViews"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal|bottom"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="22dp">

                            <ImageButton
                                android:id="@+id/ibLike"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:background="#00ffffff"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="17dp"
                                android:layout_height="17dp" />

                            <TextView
                                android:id="@+id/tvLike"
                                android:text="100"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="22dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageButton
                                android:id="@+id/ibView"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:background="#00ffffff"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="4dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/tvView"
                                android:text="1.9K"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="22dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageButton
                                android:id="@+id/ibVideo"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:background="#00ffffff"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="right|bottom"
                            android:gravity="right|bottom"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Ending in"
                                android:textSize="10sp"
                                android:textColor="#00796b"
                                android:layout_gravity="right|bottom"
                                android:gravity="right|bottom"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvTimeLeft"
                                android:text="12hrs 30mins"
                                android:textSize="14sp"
                                android:textColor="#00796b"
                                android:layout_gravity="right|bottom"
                                android:gravity="right|bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>