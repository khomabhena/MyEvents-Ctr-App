<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.hq.UpdatesView"
    tools:showIn="@layout/activity_updates_view">

    <LinearLayout
        android:id="@+id/llEvent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:background="@drawable/background_shadow"
            android:layout_width="163dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/background_main"
                android:layout_margin="1px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEventContent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/background_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="1px"
                android:layout_marginBottom="1px"
                android:layout_marginTop="1px"
                android:layout_marginRight="1px"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/background_main"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvName"
                    android:text="Your Event Name Goes Here"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="7dp"
                    android:textColor="#212121"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/ibPlace"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="17dp"
                    android:background="#00ffffff"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tvVenue"
                    android:text="Your Event Venue"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="#262626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:text="Suburb And City"
                    android:layout_marginTop="1dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="#616161"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/ibDate"
                    android:src="@drawable/ib_date_teal"
                    android:layout_marginTop="17dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:text="Sat 15-Nov-16, 18:00hrs"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="#00796b"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageButton
                        android:id="@+id/ibLike"
                        android:src="@drawable/ib_heart_teal"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/tvLike"
                        android:text="100"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                    <ImageButton
                        android:id="@+id/ibView"
                        android:src="@drawable/ib_view_teal"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/tvView"
                        android:text="1.9K"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                    <ImageButton
                        android:id="@+id/ibVideo"
                        android:src="@drawable/ib_video_gray"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAd"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:background="@drawable/background_shadow"
            android:layout_margin="1px"
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_margin="1px"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/background_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAdContent"
            android:background="@drawable/background_shadow"
            android:layout_margin="1px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_main"
                android:layout_marginRight="1px"
                android:layout_marginLeft="1px"
                android:layout_marginTop="1px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvBrandName"
                        android:text="Your Brand Name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1b1b1b"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAdTitle"
                        android:text="Your Ad Title Here"
                        android:textSize="12sp"
                        android:textColor="#008080"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="bottom|center_vertical"
                    android:gravity="bottom|center_vertical"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvWhen"
                            android:text="2 min ago"
                            android:textSize="12sp"
                            android:textColor="#939494"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLikesViews"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal|bottom"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="22dp">
