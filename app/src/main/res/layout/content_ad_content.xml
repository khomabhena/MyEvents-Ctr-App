<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.hq.AdContent"
    tools:showIn="@layout/activity_ad_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/background_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/background_main"
                android:layout_margin="1px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBrandName"
                    android:text="Brand Name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1b1b1b"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAdTitle"
                    android:text="Ad Title"
                    android:textSize="13sp"
                    android:textColor="#008080"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="6dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvWhen"
                        android:text="46 mins ago"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetails"
            android:background="@drawable/background_shadow"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/background_main"
                android:layout_margin="1px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAdDesc"
                    android:text="Ad Details"
                    android:textSize="17sp"
                    android:textColor="#1b1b1b"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/llDesc1"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageButton
                        android:src="@drawable/dot"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/tvDesc1"
                        android:text="1st Ad Description"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDesc2"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageButton
                        android:src="@drawable/dot"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/tvDesc2"
                        android:text="2nd Ad Description"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDesc3"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageButton
                        android:src="@drawable/dot"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/tvDesc3"
                        android:text="3rd Ad Description"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDesc4"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageButton
                        android:src="@drawable/dot"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="#00ffffff"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/tvDesc4"
                        android:text="4th Ad Description"
                        android:textSize="15sp"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
